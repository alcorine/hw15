/*MIXIN*/
font-med(size)
  font size "brandon_grotesquemedium", sans-serif

font-light(size)
  font size "brandon_grotesquelight", sans-serif

font-bold(size)
  font size "brandon_grotesquebold", sans-serif

font-reg(size)
  font size "brandon_grotesque_regularRg", sans-serif

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

  /*RESET*/
ul
  margin: 0;
  padding: 0;
  list-style: none;

a:focus,
button:focus,
input:focus,
textarea:focus
  outline: none;

*
  box-sizing border-box

body
  font 15px "brandon_grotesque", sans-serif

.block
  display block

.navbar-inverse
  background none
  border none


.navbar-collapse
  box-shadow(none)

section
  h2
    font-bold(60px)
    span
      font-light(60px)

/*Progect*/

/*Welcome*/
.welcome-section
  overflow hidden
  background url("../img/welcome-bg.jpg") no-repeat fixed
  background-size cover
  padding 45px 0 125px
  nav
    li
      a
        color #fff
        position relative
        display block
        padding 10px 15px
        font-med(18px)

.header
  margin 0 0 150px 0

.logo
  line-height 50px

.navbar-nav
  float right

.welcome-slogan

  h1
    font-bold(66px)
    color #fff
    text-transform uppercase
    span
      text-transform none
      font-light(32px)
      margin 40px auto 0
      color #fff
  a
    display inline-block
    margin 45px auto 0
    padding 15px 66px
    font-bold(23px)
    color #fff
    border 1px solid #fff
    border-radius(3px)

/*Services*/

.services
  article
    padding 80px 0
    h2
      color #000
      font-bold(40px)
      span
        font-light(40px)


.web-development
  .container
    h2
      text-align center
    p
      font-reg(18px)
      color #777777
    position relative

.identity-branding
  background #fafafa
  .container
    position relative
    h2
      text-align center
    p
      text-align left
      display inline-block
      font-reg(18px)
      color #777777


.services-list
  li
    /*width 49%*/
    margin-top 50px
    h4
      margin 0
      font-med(22px)
      color #222222
      overflow hidden
    p
      font-reg(18px)
      color #777777
      overflow hidden
    span
      margin 0 20px 0 0
      float left
      width 70px
      height 70px
      background #000
      display block
      border-radius(35px)
      position relative
      img
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        margin auto

