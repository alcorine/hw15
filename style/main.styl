//CONTACT
.contact
  background #7690c5
  padding 80px 0 0
  article
    padding-bottom  80px
  color #fff
  .container
    border-bottom 1px solid #87a0d2
  .subtitle
    text-align left
    color #fff
    font-size 18px

.contact-info
  .contact-list
    li
      height 50px
      vertical-align middle
      padding 0 40px
      font-reg(18px)
      position relative
      &:before
        content ""
        position absolute
        top 0
        left 0

    .tel
      &:before
        background url("../img/say-hello-sprite.png") no-repeat
        background-position 9px 0
        width 30px
        height 30px

    .email
      &:before
        background url("../img/say-hello-sprite.png") no-repeat
        background-position -156px 0
        width 30px
        height 30px

    .twitt
      &:before
        background url("../img/say-hello-sprite.png") no-repeat
        background-position -45px 0
        width 30px
        height 30px

    .fb
      &:before
        background url("../img/say-hello-sprite.png") no-repeat
        background-position -218px 0
        width 30px
        height 30px

    .g-plus
      &:before
        background url("../img/say-hello-sprite.png") no-repeat
        background-position -94px 0
